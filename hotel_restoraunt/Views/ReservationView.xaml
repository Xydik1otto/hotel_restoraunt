<Window x:Class="hotel_restoraunt.Views.ReservationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reservation Management" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Reservations}" AutoGenerateColumns="True" Margin="10"/>
        
        <Button Content="Create" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Margin="10" Command="{Binding CreateCommand}"/>
        <Button Content="Update" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Margin="120,0,0,10" Command="{Binding UpdateCommand}"/>
        <Button Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="100" Height="30" Margin="230,0,0,10" Command="{Binding DeleteCommand}"/>
    </Grid>
</Window>