<Window x:Class="hotel_restoraunt.Views.RoomView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Management" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="StatusComboBox" 
                  SelectedItem="{Binding SelectedStatus}" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Top" 
                  Width="200" Margin="10">
            <ComboBoxItem Content="All" />
            <ComboBoxItem Content="Available" />
            <ComboBoxItem Content="Occupied" />
        </ComboBox>

        <DataGrid ItemsSource="{Binding FilteredRooms}" AutoGenerateColumns="True" Margin="10,50,10,10"/>

        <Button Content="Add Room" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Height="30" Margin="10" Command="{Binding AddRoomCommand}"/>
    </Grid>
</Window>