<Window x:Class="hotel_restoraunt.Views.RoomView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rooms" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Форма додавання -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox Width="100" Margin="5" Text="{Binding NewHotelRoom.RoomNumber}" Style="{StaticResource PlaceholderTextBox}"/>
            <CheckBox Content="Вільна" Margin="5" IsChecked="{Binding NewHotelRoom.IsAvailable}" />
            <Button Content="Додати" Margin="5" Command="{Binding AddRoomCommand}"/>
        </StackPanel>

        <!-- Список номерів -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Rooms}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding RoomNumber}"/>
                <DataGridCheckBoxColumn Header="Вільна" Binding="{Binding IsAvailable}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>