<Window x:Class="hotel_restoraunt.Views.GuestView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Guests" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Форма додавання гостя -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBox Width="150" Margin="5" Text="{Binding NewGuest.Name}" Style="{StaticResource PlaceholderTextBox}"/>
            <TextBox Width="200" Margin="5" Text="{Binding NewGuest.Email}" Style="{StaticResource PlaceholderTextBox}"/>
            <Button Content="Додати" Margin="5" Command="{Binding AddGuestCommand}"/>
        </StackPanel>

        <!-- Таблиця гостей -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Guests}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ім’я" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>