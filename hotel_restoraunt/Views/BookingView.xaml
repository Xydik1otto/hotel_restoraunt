<Page x:Class="hotel_restoraunt.Views.BookingView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Управління бронюваннями" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid ItemsSource="{Binding Bookings}" 
                  SelectedItem="{Binding SelectedBooking}"
                  AutoGenerateColumns="False"
                  Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Кімната" Binding="{Binding Room.Name}" Width="*"/>
                <DataGridTextColumn Header="Гість" Binding="{Binding User.Username}" Width="*"/>
                <DataGridTextColumn Header="Заїзд" Binding="{Binding CheckInDate, StringFormat=dd.MM.yyyy}" Width="*"/>
                <DataGridTextColumn Header="Виїзд" Binding="{Binding CheckOutDate, StringFormat=dd.MM.yyyy}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="Оновити" Command="{Binding LoadBookingsCommand}" Margin="5" Padding="10 5"/>
            <Button Content="Видалити" Command="{Binding DeleteBookingCommand}" Margin="5" Padding="10 5"/>
        </StackPanel>
    </Grid>
</Page>
